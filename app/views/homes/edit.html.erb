<style>
	input.field, textarea, p#category select{ 
		width: 50%;
		max-width: 300px;
	}
</style>

<div class="well">
	<%= form_for :home, url: home_path(@home), method: :patch do |f| %>
		<h2>Editing book</h2>
		<% if @home.errors.any? %>
			<div id="error_explanation">
				<h2>
					<%= pluralize(@home.errors.count, "error") %> prohibited
					this description from being saved:
				</h2>
				<ul>
					<% @home.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<p>
			<%= f.label :title %><br/>
			<%= f.text_field :title, :class=> 'field' %>
		</p>
		<p>
			<%= f.label :description %><br/>
			<%= f.text_area 'description', :rows => 3 %>
		</p>
		<%= f.submit 'Submit', :class=>"btn btn-primary" %>
	<% end %>
</div>

&#8592; <%= link_to 'Back to home page', root_path %>
