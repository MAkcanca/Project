<style>
	input.field, textarea, p.category select{ 
		width: 50%;
		max-width: 300px;
	}
</style>

<div class="well">
	<%= form_for :publisher, url: publisher_path(@publisher), method: :patch do |f| %>
		<h2>Editing Publisher</h2>
		<% if @publisher.errors.any? %>
			<div id="error_explanation">
				<h2>
					<%= pluralize(@publisher.errors.count, "error") %> prohibited
					this publisher from being saved:
				</h2>
				<ul>
					<% @publisher.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<p>
			<%= f.label :title %><br/>
			<%= f.text_field :title, :class=> 'field' %>
		</p>
		<%= f.submit 'Submit', :class=>"btn btn-primary" %>
	<% end %>
</div>
&#8592; <%= link_to 'Back to Catalog', books_path %>
