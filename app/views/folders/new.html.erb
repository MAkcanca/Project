<div class="authform">
	<%= form_for :folder, url: folders_path do |f| %>
		<h3>Create New Folder</h3>
		<p>
		  <%= f.label :title %><br>
		  <%= f.text_field :title %>
		</p>
	 
		<p>
		  <%= f.label :description %><br>
		  <%= f.text_area :description %>
		</p>
		<p>
		  <%= f.label :close_date %><br>
			<%= select_date Date.today, prefix: :close_date %>
		</p>
		<p>					
			<%= f.check_box :instructor_only %> <%= f.label :instructor_only %>
		</p>
		<%= f.hidden_field :course_id, :value => @course_id %>
		<p>
		  <%= f.submit 'Submit',class:'btn btn-primary' %>
		</p>
	<% end %>
</div>
