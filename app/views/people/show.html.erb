<div class='well'>
	<h3>Author Details</h3>
	<table class='table table-striped'>
		<tr>
			<th>Name</th>
			<td><%= @person.full_name %></td>
		</tr>
		<tr>
			<th>Books</th>
			<td>
				<% if @person.books.empty? %>
					<em>No books here</em>
				<% else %>
					<% @person.books.each do |book| %>
						<% if book != @person.books.first %>
							<hr/>
							<%= link_to book.title, book_path(book) %>
						<% end %>
					<% end %>	
				<% end %>
			</td>
		</tr>
	</table>
</div>
