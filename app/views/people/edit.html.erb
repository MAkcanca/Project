<style>
	input.field, textarea, p.category select{ 
		width: 50%;
		max-width: 300px;
	}
	label{ vertical-align: top; width: 10em; }
</style>
<div class="well">
	<%= form_for :person, url: person_path(@person), method: :patch do |f| %>
		<h2>Editing person</h2>
		<% if @person.errors.any? %>
			<div id="error_explanation">
				<h2>
					<%= pluralize(@person.errors.count, "error") %> prohibited
					this person from being saved:
				</h2>
				<ul>
					<% @person.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<p>
			<%= f.label :first_name %>
			<%= f.text_field :first_name, :class=>'field' %>
		</p>
		<p>
			<%= f.label :last_name %>
			<%= f.text_field :last_name, :class=>'field' %>
		</p>
		<%= f.submit 'Submit', :class=>"btn btn-primary" %>
	<% end %>
</div>
&#8592; <%= link_to 'Back to index page', people_path %>
