<style>
	input.field, textarea, p.category select{ 
		width: 50%;
		max-width: 300px;
	}
	label{ vertical-align: top; width: 10em; }
</style>
<div class="well">
	<%= form_for :department, url: department_path(@department), method: :patch do |f| %>
		<h2>Editing department</h2>
		<% if @department.errors.any? %>
			<div id="error_explanation">
				<h2>
					<%= pluralize(@department.errors.count, "error") %> prohibited
					this department from being saved:
				</h2>
				<ul>
					<% @department.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<p>
			<%= f.label :title %>
			<%= f.text_field :title, :class=>'field' %>
		</p>
		<p>
			<%= f.label :abbreviation %>
			<%= f.text_field :abbreviation, :class=> 'field' %>
		</p>

		<%= f.submit 'Submit', :class=>"btn btn-primary" %>
	<% end %>
</div>
&#8592; <%= link_to 'Back to Department List', departments_path %>
